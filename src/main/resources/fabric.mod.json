{
  "schemaVersion": 1,
  "id": "tconstruct",
  "version": "${version}",

  "name": "Hephaestus",
  "description": "A little of this, a little of that, a lot of tinkering, and a lot of tools.",
  "authors": [
    "Slime Knights",
    "AlphaMode"
  ],
  "contact": {
    "sources": "https://github.com/Alpha-s-Stuff/TinkersConstruct"
  },

  "license": "MIT",
  "icon": "logo.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "slimeknights.tconstruct.TConstruct"
    ],
    "client": [
      "slimeknights.tconstruct.shared.TinkerClient"
    ],
    "fabric-datagen": [
      "slimeknights.tconstruct.TConstructData"
    ],
    "rei_client": [
      "slimeknights.tconstruct.plugin.rei.REIPlugin"
    ],
    "rei_server": [
      "slimeknights.tconstruct.plugin.rei.REIPluginServer"
    ],
    "jei_mod_plugin": [
      "slimeknights.tconstruct.plugin.jei.JEIPlugin"
    ],
    "cardinal-components": [
      "slimeknights.tconstruct.gadgets.capability.PiggybackCapability",
      "slimeknights.tconstruct.tools.logic.EquipmentChangeWatcher",
      "slimeknights.tconstruct.library.tools.capability.TinkerDataCapability",
      "slimeknights.tconstruct.library.tools.capability.PersistentDataCapability",
      "slimeknights.tconstruct.library.tools.capability.EntityModifierCapability"
    ]
  },
  "accessWidener": "tinkers.accesswidener",
  "depends": {
    "fabricloader": ">=0.14.19",
    "fabric": ">=0.76.0",
    "minecraft": "1.19.2",
    "mantle": "*"
  },
  "custom": {
    "cardinal-components": [
      "tconstruct:piggyback",
      "tconstruct:equipment_watcher",
      "tconstruct:persistent_data",
      "tconstruct:modifier_data",
      "tconstruct:modifiers"
    ],
    "banner": "Mantle.png"
  }
}
